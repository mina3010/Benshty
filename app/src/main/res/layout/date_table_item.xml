<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_6sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/timeCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="#F18C8E"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/check_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_check"
                    app:tint="@color/main_color" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textStyle="bold"
                android:textColor="@color/main_color"
                android:background="@drawable/shape"
                android:backgroundTint="#D4D4D4"
                android:gravity="top"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:paddingStart="@dimen/_18sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text=" 1 AM"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/timeCheck"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:id="@+id/customTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/hour"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:padding="@dimen/_2sdp">
                <TextView
                    android:id="@+id/t1"
                    android:layout_weight="1"
                    android:text="2:20 AM"
                    android:textColor="@color/main_color"
                    android:background="@drawable/shape4"
                    android:textSize="@dimen/_10sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/t2"
                    android:layout_weight="1"
                    android:text="2:40 AM"
                    android:textColor="@color/main_color"
                    android:background="@drawable/shape4"
                    android:textSize="@dimen/_10sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/t3"
                    android:layout_weight="1"
                    android:text="2:59 AM"
                    android:textColor="@color/main_color"
                    android:background="@drawable/shape4"
                    android:textSize="@dimen/_10sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                app:tint="@color/secondary_color"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1sdp"
                android:src="@drawable/mcv_action_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>

</LinearLayout>